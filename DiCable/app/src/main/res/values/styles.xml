<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardMaxElevation">12dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="TabButton">
        <item name="colorControlHighlight">@color/black </item>
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">35dp </item>
        <item name="android:background">@drawable/tab_butt_style</item>
        <item name="android:textSize">10sp </item>
        <item name="android:textColor">@drawable/tab_butt_text_color</item>
    </style>

    <style name="TabButtonActive">
        <item name="colorControlHighlight">@color/black </item>
        <item name="android:layout_width">wrap_content </item>
        <item name="android:layout_height">35dp </item>
        <item name="android:background">@drawable/tab_butt_style_active</item>
        <item name="android:textSize">10sp </item>
        <item name="android:textColor">@drawable/tab_butt_text_color_active</item>
    </style>

    <style name="Divider">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">332dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="TableDataLeft">
        <item name="android:layout_width">172dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="TableDataRight">
        <item name="android:layout_width">172dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.MyTheme.Widget" parent="@android:style/Theme.Holo">

        <item name="android:background">@android:color/black</item>
        <!-- your other custom widget styles -->
    </style>

</resources>