<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/errorIndication"
        style="@style/TableDataLeft"
        android:text="@string/errorIndication"/>

    <TextView
        android:id="@+id/errorIndication_val"
        style="@style/TableDataRight" />

    <View
        android:id="@+id/errorIndication_line"
        style="@style/Divider"
        android:layout_below="@+id/errorIndication_val" />
</RelativeLayout>